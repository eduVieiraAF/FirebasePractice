<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delete">

    <ImageView
        android:id="@+id/logo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/cloudy"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE DATA"
        android:textColor="@color/prussian_blue"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="7dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/logo4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/edit_userName4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="21dp"
        android:hint="Username"
        android:textSize="22sp"
        android:padding="7dp"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="text"
        android:textColorHint="@color/white"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/sky_blue"
        android:gravity="center"
        android:textColor="@color/prussian_blue"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/txt_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_search2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="SEARCH"
        android:textSize="24sp"
        android:textColor="@color/blissful_blue"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/prussian_blue"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/edit_userName4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>