<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateData">

    <ImageView
        android:id="@+id/logo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/cloudy"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_updateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE DATA"
        android:textColor="@color/prussian_blue"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="7dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/logo3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/purple_200"
        android:backgroundTint="@color/sky_blue"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_updateData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="7dp">

            <EditText
                android:id="@+id/edit_userName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="21dp"
                android:hint="Username"
                android:textSize="22sp"
                android:padding="7dp"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:inputType="text"
                android:textColorHint="@color/sky_blue"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:textColor="@color/prussian_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/edit_fullName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="21dp"
                android:hint="Full name"
                android:textSize="22sp"
                android:padding="7dp"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:inputType="text"
                android:textColorHint="@color/sky_blue"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:textColor="@color/prussian_blue"
                app:layout_constraintTop_toBottomOf="@id/edit_userName3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/edit_age3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="21dp"
                android:hint="Age"
                android:textSize="22sp"
                android:padding="7dp"
                android:imeOptions="actionDone"
                android:maxLength="3"
                android:inputType="number"
                android:textColorHint="@color/sky_blue"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:textColor="@color/prussian_blue"
                app:layout_constraintTop_toBottomOf="@id/edit_fullName3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="UPDATE DATA"
        android:textSize="24sp"
        android:textColor="@color/blissful_blue"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/prussian_blue"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/cardView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>