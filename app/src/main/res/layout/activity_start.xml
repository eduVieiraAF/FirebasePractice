<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/logoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/cloudy"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIREBASE PRACTICE"
        android:textColor="@color/prussian_blue"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="7dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/logoMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="REGISTRATION"
        android:textSize="24sp"
        android:textColor="@color/blissful_blue"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/prussian_blue"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/txt_firebase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_readData"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="READ DATA"
        android:textSize="24sp"
        android:textColor="@color/blissful_blue"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/prussian_blue"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_update2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="UPDATE DATA"
        android:textSize="24sp"
        android:textColor="@color/blissful_blue"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/prussian_blue"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_readData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="DELETE DATA"
        android:textSize="24sp"
        android:textColor="@color/blissful_blue"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/prussian_blue"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/btn_update2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/server"
        app:layout_constraintTop_toBottomOf="@id/btn_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>