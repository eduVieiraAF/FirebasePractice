<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <ImageView
      android:id="@+id/logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="21dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:src="@drawable/cloudy"
      tools:ignore="ContentDescription" />

  <TextView
      android:id="@+id/txt_registration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="REGISTRATION"
      android:textColor="@color/prussian_blue"
      android:textSize="36sp"
      android:textStyle="bold"
      android:padding="7dp"
      android:layout_marginTop="25dp"
      app:layout_constraintTop_toBottomOf="@id/logo"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:ignore="HardcodedText" />

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/cardView"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      app:cardCornerRadius="15dp"
      app:strokeWidth="1dp"
      app:strokeColor="@color/purple_200"
      android:backgroundTint="@color/sky_blue"
      android:layout_marginTop="25dp"
      app:layout_constraintTop_toBottomOf="@id/txt_registration"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="21dp"
        android:elevation="7dp">

      <EditText
          android:id="@+id/txt_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="21dp"
          android:hint="Full name"
          android:textSize="22sp"
          android:padding="7dp"
          android:imeOptions="actionNext"
          android:maxLines="1"
          android:inputType="text"
          android:textColorHint="@color/sky_blue"
          android:background="@drawable/round_shape"
          android:backgroundTint="@color/white"
          android:gravity="center"
          android:textColor="@color/prussian_blue"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          tools:ignore="HardcodedText" />

      <EditText
          android:id="@+id/txt_age"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="21dp"
          android:padding="7dp"
          android:hint="Age"
          android:textSize="22sp"
          android:imeOptions="actionNext"
          android:maxLines="1"
          android:maxLength="3"
          android:inputType="number"
          android:textColorHint="@color/sky_blue"
          android:background="@drawable/round_shape"
          android:backgroundTint="@color/white"
          android:gravity="center"
          android:textColor="@color/prussian_blue"
          app:layout_constraintTop_toBottomOf="@id/txt_name"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          tools:ignore="HardcodedText" />

      <EditText
          android:id="@+id/txt_userName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
           android:layout_margin="21dp"
          android:hint="Username"
          android:textSize="22sp"
          android:padding="7dp"
          android:imeOptions="actionDone"
          android:maxLines="1"
          android:inputType="text"
          android:textColorHint="@color/sky_blue"
          android:background="@drawable/round_shape"
          android:backgroundTint="@color/white"
          android:gravity="center"
          android:textColor="@color/prussian_blue"
          app:layout_constraintTop_toBottomOf="@id/txt_age"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </com.google.android.material.card.MaterialCardView>

  <Button
      android:id="@+id/btn_login"
      android:layout_width="280dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="21dp"
      android:text="LOGIN"
      android:textSize="24sp"
      android:textColor="@color/blissful_blue"
      android:background="@drawable/round_shape"
      android:backgroundTint="@color/prussian_blue"
      tools:ignore="HardcodedText"
      app:layout_constraintTop_toBottomOf="@id/cardView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>